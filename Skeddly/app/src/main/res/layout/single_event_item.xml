<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/single_event_item"
        android:layout_width="346dp"
        android:layout_height="206dp"
        android:background="@color/secondary_dark_orange"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="97dp"
            android:background="@color/neutral_cream_warm"
            app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraintLayout"
            android:layout_width="match_parent"
            android:layout_height="104dp"
            android:background="@color/neutral_lighter_off_white"
            app:layout_constraintTop_toBottomOf="@+id/imageView">

            <TextView
                android:id="@+id/text_event_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="13dp"
                android:fontFamily="sans-serif-medium"
                android:text="@string/event_name"
                android:textColor="@color/primary_navy"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/button_view_info"
                android:layout_width="114dp"
                android:layout_height="33dp"
                android:layout_marginStart="15dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/button_round_style"
                android:backgroundTint="@color/neutral_lighter_off_white"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_view_info"
                android:textColor="@color/secondary_dark_purple"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <Button
                android:id="@+id/button_join"
                android:layout_width="78dp"
                android:layout_height="33dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="13dp"
                android:background="@drawable/button_round_style"
                android:backgroundTint="@color/primary_purple"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_join"
                android:textColor="@color/neutral_lighter_off_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <Button
                android:id="@+id/button_edit"
                android:layout_width="78dp"
                android:layout_height="33dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="12dp"
                android:background="@drawable/button_round_style"
                android:backgroundTint="@color/primary_orange"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:text="@string/button_edit"
                android:textColor="@color/neutral_lighter_off_white"
                android:textSize="14sp"
                app:layout_constraintBottom_toTopOf="@+id/button_join"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>