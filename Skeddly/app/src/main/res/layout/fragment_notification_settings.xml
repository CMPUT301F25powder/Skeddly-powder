<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!-- android:background="@color/"-->

    <!-- Title -->
    <TextView
        android:id="@+id/titleNotificationSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@color/secondary_dark_purple"
        android:gravity="center"
        android:paddingVertical="20dp"
        android:text="Notification Settings"
        android:textColor="@color/neutral_off_white"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Lottery Status Row -->
    <TextView
        android:id="@+id/textLotteryStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lottery Status Notifications"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/titleNotificationSettings"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="30dp" />

    <Switch
        android:id="@+id/switchLotteryStatus"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/textLotteryStatus"
        app:layout_constraintBottom_toBottomOf="@id/textLotteryStatus"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider1"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:background="@color/secondary_light_navy"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/textLotteryStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Event Update Row -->
    <TextView
        android:id="@+id/textEventUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Event Update Notifications"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/divider1"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp" />

    <Switch
        android:id="@+id/switchEventUpdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/textEventUpdate"
        app:layout_constraintBottom_toBottomOf="@id/textEventUpdate"
        app:layout_constraintEnd_toEndOf="parent" />

    <View
        android:id="@+id/divider2"
        android:layout_width="0dp"
        android:layout_height="1dp"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="20dp"
        android:background="@color/secondary_light_navy"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/textEventUpdate" />

    <!-- Administrative Row -->
    <TextView
        android:id="@+id/textAdministrative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Administrative Notifications"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/divider2"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp" />

    <Switch
        android:id="@+id/switchAdministrative"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toTopOf="@id/textAdministrative"
        app:layout_constraintBottom_toBottomOf="@id/textAdministrative"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

