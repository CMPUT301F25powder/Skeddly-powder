<!--                        app:layout_constraintEnd_toEndOf="parent"-->
<!--                        app:layout_constraintStart_toStartOf="@+id/value_description" />-->

                    <TextView
                        android:id="@+id/text_category_selector"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="24dp"
                        android:background="@android:drawable/editbox_background"
                        android:drawablePadding="16dp"
                        android:hint="@string/text_category_selector"
                        android:padding="8dp"
                        app:drawableEndCompat="@android:drawable/arrow_down_float"
                        app:layout_constraintEnd_toStartOf="@+id/edit_waitlist_limit"
                        app:layout_constraintStart_toStartOf="@id/label_description"
                        app:layout_constraintTop_toBottomOf="@id/value_description" />

                    <!-- Right-aligned details -->
                    <TextView
                        android:id="@+id/label_waitlist_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:text="@string/wait_list_limit"
                        android:textColor="@color/primary_navy"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/text_category_selector" />

                    <EditText
                        android:id="@+id/edit_waitlist_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/edit_waitlist_limit"
                        android:inputType="number"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@id/label_waitlist_limit"
                        app:layout_constraintTop_toBottomOf="@id/label_waitlist_limit" />

                    <TextView
                        android:id="@+id/label_attendee_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/attendee_limit"
                        android:textColor="@color/primary_navy"
                        app:layout_constraintEnd_toEndOf="@id/edit_waitlist_limit"
                        app:layout_constraintTop_toBottomOf="@id/edit_waitlist_limit" />

                    <EditText
                        android:id="@+id/edit_attendee_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/edit_attendee_limit"
                        android:inputType="number"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="@id/label_attendee_limit"
                        app:layout_constraintTop_toBottomOf="@id/label_attendee_limit" />

                    <!-- Confirm Button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/confirm_button"
                        android:layout_width="0dp"
                        android:layout_height="40dp"
                        android:background="@color/primary_purple"
                        android:text="@string/confirm"
                        android:textAllCaps="false"
                        android:textColor="@color/neutral_lighter_off_white"
                        app:layout_constraintEnd_toEndOf="@id/edit_attendee_limit"
                        app:layout_constraintTop_toBottomOf="@id/edit_attendee_limit" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
