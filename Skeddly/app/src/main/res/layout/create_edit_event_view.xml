<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_light_blue">

    <!-- Back Button -->
    <ImageButton
        android:id="@+id/button_back"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/image_round_style"
        android:src="@drawable/ic_arrow_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/neutral_lighter_off_white"
        tools:ignore="ContentDescription" />

    <!-- Main Content Card -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/button_back">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/main_content_card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="16dp"
                android:layout_marginEnd="24dp"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/neutral_off_white"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="24dp">

                    <!-- Event Image Banner -->
                    <ImageView
                        android:id="@+id/event_image"
                        android:layout_width="0dp"
                        android:layout_height="180dp"
                        android:background="@drawable/card_background"
                        android:scaleType="centerCrop"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Event Title and Location Overlay -->
                    <TextView
                        android:id="@+id/text_event_title_overlay"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/event_title_background"
                        android:drawablePadding="8dp"
                        android:elevation="5dp"
                        android:paddingStart="12dp"
                        android:paddingTop="8dp"
                        android:paddingEnd="12dp"
                        android:paddingBottom="8dp"
                        android:text="@string/event_title_location"
                        android:textColor="@color/neutral_lighter_off_white"
                        android:textSize="16sp"
                        app:layout_constraintBottom_toBottomOf="@id/event_image"
                        app:layout_constraintStart_toStartOf="parent" />

                    <!-- QR Code Style Button -->
                    <ImageButton
                        android:id="@+id/button_qr_code"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/qr_code_circle_background"
                        android:elevation="5dp"
                        android:padding="12dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_qr_code_scanner"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/neutral_lighter_off_white"
                        tools:ignore="ContentDescription" />

                    <!-- Event Time -->
                    <com.google.android.material.materialswitch.MaterialSwitch
                        android:id="@+id/switch_recurrence"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/switch_recurrence"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/event_image" />

                    <TextView
                        android:id="@+id/text_date_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_date"
                        app:layout_constraintStart_toStartOf="@+id/switch_recurrence"
                        app:layout_constraintTop_toBottomOf="@+id/switch_recurrence" />

                    <TextView
                        android:id="@+id/text_date_dash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/text_dash"
                        app:layout_constraintBottom_toBottomOf="@+id/text_date_start"
                        app:layout_constraintStart_toEndOf="@+id/text_date_start"
                        app:layout_constraintTop_toTopOf="@+id/text_date_start" />

                    <TextView
                        android:id="@+id/text_date_finish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/text_date"
                        app:layout_constraintBottom_toBottomOf="@+id/text_date_dash"
                        app:layout_constraintStart_toEndOf="@+id/text_date_dash"
                        app:layout_constraintTop_toTopOf="@+id/text_date_dash" />

<!--                    <TextView-->
<!--                        android:id="@+id/text_day_of_week"-->
<!--                        android:layout_width="wrap_content"-->
<!--                        android:layout_height="wrap_content"-->
<!--                        android:layout_marginTop="8dp"-->
<!--                        android:text="@string/monday_wednesday_9_30_10_00"-->
<!--                        android:textColor="@color/primary_navy"-->
<!--                        android:textSize="14sp"-->
<!--                        app:layout_constraintStart_toStartOf="@+id/text_date_start"-->
<!--                        app:layout_constraintTop_toBottomOf="@+id/text_date_start" />-->
                    <!-- ^ OLD probably remove? -->

                    <TextView
                        android:id="@+id/text_day_of_week"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:background="@android:drawable/editbox_background"
                        android:drawablePadding="16dp"
                        android:hint="@string/text_day_of_week"
                        android:padding="8dp"
                        app:drawableEndCompat="@android:drawable/arrow_down_float"
                        app:layout_constraintEnd_toEndOf="@+id/text_date_finish"
                        app:layout_constraintStart_toStartOf="@id/text_date_start"
                        app:layout_constraintTop_toBottomOf="@id/text_date_start" />

                    <!-- Information Section -->
                    <TextView
                        android:id="@+id/text_time_start"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_time"
                        app:layout_constraintStart_toStartOf="@+id/switch_recurrence"
                        app:layout_constraintTop_toBottomOf="@+id/text_day_of_week" />

                    <TextView
                        android:id="@+id/text_time_dash"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/text_dash"
                        app:layout_constraintStart_toEndOf="@+id/text_time_start"
                        app:layout_constraintTop_toTopOf="@+id/text_time_start" />

                    <TextView
                        android:id="@+id/text_time_finish"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="@string/text_time"
                        app:layout_constraintStart_toEndOf="@+id/text_time_dash"
                        app:layout_constraintTop_toTopOf="@+id/text_time_start" />

                    <TextView
                        android:id="@+id/label_information"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="@string/information"
                        android:textColor="@color/primary_navy"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/text_time_start" />

                    <TextView
                        android:id="@+id/label_event_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/event_title"
                        android:textColor="@color/primary_navy"
                        app:layout_constraintStart_toStartOf="@id/label_information"
                        app:layout_constraintTop_toBottomOf="@id/label_information" />

                    <EditText
                        android:id="@+id/value_event_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="16dp"
                        android:hint="@string/enter_event_title"
                        android:scrollHorizontally="true"
                        android:singleLine="true"
                        android:textColor="@color/neutral_brown_light"
                        app:layout_constraintBaseline_toBaselineOf="@+id/label_event_title"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@+id/value_description" />

                    <TextView
                        android:id="@+id/label_description"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="24dp"
                        android:text="@string/description"
                        android:textColor="@color/primary_navy"
                        app:layout_constraintStart_toStartOf="@id/label_event_title"
                        app:layout_constraintTop_toBottomOf="@id/label_event_title" />

                    <EditText
                        android:id="@+id/value_description"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="16dp"
                        android:hint="@string/enter_event_description"
                        android:textColor="@color/neutral_brown_light"
                        app:layout_constraintBaseline_toBaselineOf="@+id/label_description"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@+id/label_description" />

