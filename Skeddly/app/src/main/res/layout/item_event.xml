<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <androidx.cardview.widget.CardView
        android:id="@+id/card_single_event_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/single_event_item"
            android:layout_width="346dp"
            android:layout_height="206dp"
            android:background="@drawable/gradient_event_item">

            <ImageView
                android:id="@+id/img_event"
                android:layout_width="match_parent"
                android:layout_height="97dp"
                android:background="@color/neutral_cream_warm"
                android:scaleType="centerCrop"
                app:layout_constraintBottom_toTopOf="@+id/constraintLayout"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constraintLayout"
                android:layout_width="match_parent"
                android:layout_height="104dp"
                android:background="@drawable/bg_style_bottom_round"
                android:backgroundTint="@color/neutral_lighter_off_white"
                app:layout_constraintTop_toBottomOf="@+id/img_event">

                <TextView
                    android:id="@+id/text_event_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginTop="13dp"
                    android:layout_marginEnd="15dp"
                    android:ellipsize="end"
                    android:fontFamily="sans-serif-medium"
                    android:maxLines="1"
                    android:text="@string/event_name"
                    android:textColor="@color/primary_navy"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toStartOf="@+id/btn_edit"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_view_info"
                    android:layout_width="114dp"
                    android:layout_height="33dp"
                    android:layout_marginStart="15dp"
                    android:background="@drawable/btn_style_view_info"
                    android:drawableStart="@drawable/ic_info"
                    android:drawablePadding="-10dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:paddingStart="12dp"
                    android:text="@string/event_btn_view_info"
                    android:textAllCaps="false"
                    android:textColor="@color/secondary_dark_purple"
                    app:layout_constraintBottom_toBottomOf="@+id/btn_join"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="@+id/btn_join" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_join"
                    android:layout_width="78dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="13dp"
                    android:background="@drawable/gradient_btn_join"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/event_btn_join"
                    android:textAllCaps="false"
                    android:textColor="@color/neutral_lighter_off_white"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_edit"
                    android:layout_width="78dp"
                    android:layout_height="33dp"
                    android:layout_marginEnd="15dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/gradient_btn_edit"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:text="@string/event_btn_edit"
                    android:textAllCaps="false"
                    android:textColor="@color/neutral_lighter_off_white"
                    android:textSize="14sp"
                    app:layout_constraintBottom_toTopOf="@+id/btn_join"
                    app:layout_constraintEnd_toEndOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>
