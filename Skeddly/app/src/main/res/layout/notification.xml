<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="33dp"
    android:paddingTop="24dp"
    android:paddingEnd="33dp"
    android:background="@drawable/textview_border"
    android:paddingBottom="24dp">

    <!-- Circular Icon -->
    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:scaleType="center"
        android:background="@drawable/button_round_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@android:drawable/ic_dialog_email" />

    <!-- Text Container (Title and Subtitle) -->
    <LinearLayout
        android:id="@+id/text_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="28dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/notification_arrow"
        app:layout_constraintStart_toEndOf="@id/notification_icon"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/notification_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="Notification"
            android:textStyle="bold"
            android:textColor="#1C374F"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/notification_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Notification information, here is information about the notification yuppers"
            android:textColor="#1C374F"
            android:textSize="12sp" />

    </LinearLayout>

    <!-- Arrow Icon -->
    <ImageView
        android:id="@+id/notification_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="#1C374F" />

</androidx.constraintlayout.widget.ConstraintLayout>
