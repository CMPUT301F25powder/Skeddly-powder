<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="33dp"
    android:paddingTop="24dp"
    android:paddingEnd="33dp"
    android:background="@drawable/textview_border"
    android:paddingBottom="24dp">

    <!-- Circular Icon -->
    <ImageView
        android:id="@+id/notification_icon"
        android:layout_width="43dp"
        android:layout_height="43dp"
        android:scaleType="center"
        android:background="@drawable/image_round_style"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@android:drawable/ic_dialog_email" />

    <!-- Arrow Icon -->
    <ImageView
        android:id="@+id/notification_arrow"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_arrow_right"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:tint="@color/primary_navy" />

    <!-- Notification Title -->
    <TextView
        android:id="@+id/notification_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="2dp"
        android:text="@string/notification"
        android:textColor="@color/primary_navy"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/notification_subtitle"
        app:layout_constraintEnd_toStartOf="@+id/notification_arrow"
        app:layout_constraintStart_toEndOf="@id/notification_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <!-- Notification Subtitle -->
    <TextView
        android:id="@+id/notification_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/notification_information_here_is_information_about_the_notification_yuppers"
        android:textColor="@color/primary_navy"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/notification_title"
        app:layout_constraintStart_toStartOf="@+id/notification_title"
        app:layout_constraintTop_toBottomOf="@id/notification_title" />

</androidx.constraintlayout.widget.ConstraintLayout>
